@model IEnumerable<TrainingCenterLib.Entities.Cours>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout2.cshtml";
}

<h2>Programming Courses</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CourseName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Duration)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.CreatedAt)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cours1.CourseName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CourseName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Duration)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.CreatedAt)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.CourseName)
        </td>
        <td>
            @*@Html.ActionLink("Edit", "Edit", new { id = item.CourseID }) |
        @Html.ActionLink("Details", "Details", new { id = item.CourseID }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.CourseID })*@

            <a href="@Url.Action( "Edit", new { id = item.CourseID })" class="btn btn-primary" style="border-radius:10px"><i class="fa-solid fa-pen-to-square"></i></a>
            <a href="@Url.Action( "Details", new { id = item.CourseID })" class="btn btn-warning" style="border-radius:10px"><i class="fa-solid fa-circle-info"></i></a>
            <a href="@Url.Action( "Delete", new { id = item.CourseID })" class="btn btn-danger" style="border-radius:10px"><i class="fa-solid fa-trash-can"></i></a>
        </td>
    </tr>
}

</table>
