@model IEnumerable<TrainingCenterLib.Entities.WaitingList>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout2.cshtml";
}

<h2>Index</h2>

<button type="button" class="btn btn-primary create-btn">@Html.ActionLink("Create New", "Create")</button>

<table class="table table-hover">
    <tr class="table-dark">
        <th>
            @Html.DisplayNameFor(model => model.GroupName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsPaid)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsCash)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AvailableCours.AvailableCourseID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Student.FirstName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GroupName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsPaid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsCash)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AvailableCours.AvailableCourseID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Student.FirstName)
            </td>
            <td>
                <a href="@Url.Action( "Edit", new { id = item.WaitingListID })" class="btn btn-primary" style="border-radius:10px"><i class="fa-solid fa-pen-to-square"></i></a>
                <a href="@Url.Action( "Details", new { id = item.WaitingListID })" class="btn btn-warning" style="border-radius:10px"><i class="fa-solid fa-circle-info"></i></a>
                <a href="@Url.Action( "Delete", new { id = item.WaitingListID })" class="btn btn-danger" style="border-radius:10px"><i class="fa-solid fa-trash-can"></i></a>
            </td>
        </tr>
    }

</table>
