@model IEnumerable<TrainingCenterLib.Entities.TimeSlot>

@{
    ViewBag.Title = "Schedules";
    Layout = "~/Views/Shared/Layout2.cshtml";
}

<h2>Schedules</h2>

<button type="button" class="btn btn-primary create-btn">@Html.ActionLink("Create New", "Create")</button>
<table class="table table-hover">
    <tr class="table-dark">
        <th>
            @Html.DisplayNameFor(model => model.StartTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndTime)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.StartTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndTime)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.TimeSlotID }) |
            @Html.ActionLink("Details", "Details", new { id=item.TimeSlotID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.TimeSlotID })
        </td>
    </tr>
}

</table>
