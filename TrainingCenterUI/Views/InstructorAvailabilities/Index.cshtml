@model IEnumerable<TrainingCenterLib.Entities.InstructorAvailability>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout2.cshtml";
}

<h2>Instructors Available Time</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IsGroupDays1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Instructor.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TimeSlot.TimeSlotID)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IsGroupDays1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Instructor.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TimeSlot.TimeSlotID)
        </td>
        <td>
         
            <a href="@Url.Action( "Edit", new { id = item.InstructorAvailabilityID })" class="btn btn-primary" style="border-radius:10px"><i class="fa-solid fa-pen-to-square"></i></a>
            <a href="@Url.Action( "Details", new { id = item.InstructorAvailabilityID })" class="btn btn-warning" style="border-radius:10px"><i class="fa-solid fa-circle-info"></i></a>
            <a href="@Url.Action( "Delete", new { id = item.InstructorAvailabilityID })" class="btn btn-danger" style="border-radius:10px"><i class="fa-solid fa-trash-can"></i></a>
        </td>
    </tr>
}

</table>
